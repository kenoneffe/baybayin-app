<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:weightSum="30">

        <TextView
            android:id="@+id/identifyCharTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Identify the Character"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_weight="14.4"/>


        <TextView
            android:id="@+id/slide_char_reading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="A"
            android:textStyle="bold"
            android:background="@color/colorWhite"
            android:fontFamily="@font/baybayin_clu"
            android:textSize="150sp"
            android:gravity="center"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            android:padding="10dp">

            <Button
                android:id="@+id/slide_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A"
                android:background="@drawable/mainbtn"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/slide_optiion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BA"
                android:background="@drawable/mainbtn"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/slide_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KA"
                android:background="@drawable/mainbtn"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>